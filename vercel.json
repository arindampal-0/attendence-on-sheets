{
    "version": 2,
    "builds": [
        {
            "use": "@vercel/node",
            "config": { "includeFiles": ["dist/**"] }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/serverless.js"
        },
        {
            "source": "/(.*)",
            "destination": "/public"
        }
    ]
}